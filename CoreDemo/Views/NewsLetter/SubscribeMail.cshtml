<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>Pellentesque dui, non felis. Maecenas male </p>    
    <form action="/NewsLetter/SubscribeMail/" method="post" id="subscribeMailForm">
        <input type="email" placeholder="Email" required="" name="Mail">
        <input type="submit" value="Subscribe">
    </form>

</div>
<script>
    $(function () {      
        $("#subscribeMailForm").submit(function (event) {
            event.preventDefault(); //burada tıklanınca post işlemi yapmasın diye önlem alıyoruz
            var post_url = $(this).attr("action"); //formun urlsi alınıyor
            var request_method = $(this).attr("method"); //formun metodu alınıyor
            var form_data = $(this).serialize(); //formun datası alınıyor

            $.ajax({
                url: post_url,
                type: request_method,
                data: form_data
            }).done(function (response) { //
                swal("Success");                
            });
            document.querySelector("#subscribeMailForm").reset();

        });
    })

</script>