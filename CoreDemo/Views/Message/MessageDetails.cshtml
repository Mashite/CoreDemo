
@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

    @Html.Label("Message Id")
    @Html.HiddenFor(x => x.MessageId, new { @class = "form-control" })

    <br />
    @Html.Label("Gönderici")
    @Html.TextBoxFor(x => x.SenderUser.WriterEmail, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj Konusu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj Detayı")
    @Html.TextAreaFor(x => x.Details,3,10, new { @class = "form-control" })
    <br />
    <a href="/Message/Inbox/" class="btn btn-info">Ok</a>

